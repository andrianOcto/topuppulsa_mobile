<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/PrimaryColor">

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Here"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textColor="#ffff"
        android:id="@+id/button_register"
        android:enabled="true"
        android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_login"
            android:layout_below="@id/button_register"
            android:text="login with"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="#FFCDD2"
            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/line1"
            android:src="@drawable/line"
            android:layout_toLeftOf="@id/text_login"
            android:layout_below="@id/button_register"
            android:layout_marginTop="25dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/line2"
            android:src="@drawable/line"
            android:layout_toRightOf="@id/text_login"
            android:layout_below="@id/button_register"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_login"
            android:id="@+id/button_login_facebook"
            android:text="Facebook"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:backgroundTint="#3949AB"
            android:elevation="@dimen/abc_action_bar_content_inset_material" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_or"
            android:layout_below="@id/button_login_facebook"
            android:text="or"
            android:layout_centerHorizontal="true"
            android:textColor="#FFCDD2"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_username"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/text_or"
            android:textColor="#FFEBEE"
            android:textAlignment="center"
            android:hint="Email"
            android:textColorHint="#FFEBEE"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:inputType="textEmailAddress"
            android:ems="10" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/editText_password"
            android:layout_below="@id/editText_username"
            android:hint="Password"
            android:textColor="#FFEBEE"
            android:textColorHint="#FFEBEE"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:ems="10"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login"
            android:text="Login"
            android:layout_below="@id/editText_password"
            android:layout_centerHorizontal="true"
            android:textColor="#ffff"
            android:layout_marginTop="10dp"
            android:backgroundTint="@android:color/transparent"
            android:background="@android:color/transparent"/>

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
